{
  "name": "@cloydlau/scripts",
  "version": "0.10.0",
  "private": false,
  "description": "Script collection written in Deno.",
  "author": "cloydlau",
  "license": "MIT",
  "repository": "https://github.com/cloydlau/scripts",
  "keywords": [
    "deno",
    "scripts",
    "cac",
    "cli",
    "switchVue",
    "verifyCommit",
    "release"
  ],
  "bin": {
    "cl": "bin/cli.ts"
  },
  "files": [
    "bin",
    "src"
  ],
  "engines": {
    "deno": "latest"
  },
  "scripts": {
    "release": "npx case-police --fix && npx lint-staged && cl release"
  },
  "devDependencies": {
    "@antfu/eslint-config": "latest",
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "case-police": "latest",
    "eslint": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "typescript": "latest"
  },
  "lint-staged": {
    "{src,__tests__}/**.*": [
      "eslint --fix"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
